---
import Layout from "~/layouts/Layout.astro";
import ContentSection from "~/components/sections/ContentSection.astro";
import FeaturesList from "~/components/sections/FeaturesList.astro";
import TeamSection from "~/components/sections/TeamSection.astro";
import FeatureItem from "~/components/ui/FeatureItem.astro";
import TeamMember from "~/components/ui/TeamMember.astro";
import PageHeader from "~/components/layout/PageHeader.astro";
import {
  BrainCog,
  BicepsFlexed,
  AirVent,
  Antenna,
  ArrowDownAZ,
  BadgeCheck,
} from "lucide-react";
import { languages } from "~/i18n/ui";
import { useTranslations } from "~/i18n/utils";

import cooperImage from "~/assets/belkis-with-david.jpg";
import brandImage from "~/assets/Belkis-Clarke-Mitcham.webp";
import murphyImage from "~/assets/belkis-with-baby.jpg";
import tarsImage from "~/assets/smiling-with-flowers.webp";
import storyImage from "~/assets/dailyadvent-belkisclarke.png";

import Timeline from "~/components/sections/Timeline.astro";
import Section from "~/components/layout/Section.astro";
import Container from "~/components/ui/Container.astro";
import Heading from "~/components/ui/Heading.astro";
import Text from "~/components/ui/Text.astro";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const timelineItems = [
  {
    date: t["about.timeline.1.date"],
    title: t["about.timeline.1.title"],
    description: t["about.timeline.1.desc"],
  },
  {
    date: t["about.timeline.2.date"],
    title: t["about.timeline.2.title"],
    description: t["about.timeline.2.desc"],
  },
  {
    date: t["about.timeline.3.date"],
    title: t["about.timeline.3.title"],
    description: t["about.timeline.3.desc"],
  },
  {
    date: t["about.timeline.4.date"],
    title: t["about.timeline.4.title"],
    description: t["about.timeline.4.desc"],
  },
];
---

<Layout
  title="About Belkis Clarke - Keynote Speaker | Human Currency™ Strategist | Helping Teams Restore Trust, Retention & Real Leadership"
  description="Learn about Belkis Clarke, a keynote speaker and Human Currency™ Strategist helping teams restore trust, retention, and real leadership."
>
  <PageHeader title={t["about.title"]} description={t["about.mission"]} />

  <ContentSection
    title={t["about.story.title"]}
    image={storyImage}
    imageAlt="Endurance spaceship approaching a wormhole"
  >
    <Text>{t["about.story.p1"]}</Text>
    <Text>{t["about.story.p2"]}</Text>
    <Text>{t["about.story.p3"]}</Text>
  </ContentSection>

  <Container class="py-24">
    <Heading level={2} class="text-center mb-12"
      >{t["about.timeline.title"]}</Heading
    >
    <Timeline items={timelineItems} />
  </Container>

  <Section>
    <Container>
      <div class="mb-24">
        <Heading level={2} class="text-center mb-12"
          >{t["about.why.title"]}</Heading
        >
        <FeaturesList>
          <FeatureItem
            title={t["about.feat.fast"]}
            description={t["about.feat.fast.desc"]}
          >
            <BrainCog slot="icon" className="w-6 h-6" />
          </FeatureItem>
          <FeatureItem
            title={t["about.feat.secure"]}
            description={t["about.feat.secure.desc"]}
          >
            <BicepsFlexed slot="icon" className="w-6 h-6" />
          </FeatureItem>
          <FeatureItem
            title={t["about.feat.responsive"]}
            description={t["about.feat.responsive.desc"]}
          >
            <AirVent slot="icon" className="w-6 h-6" />
          </FeatureItem>
          <FeatureItem
            title={t["about.feat.seo"]}
            description={t["about.feat.seo.desc"]}
          >
            <Antenna slot="icon" className="w-6 h-6" />
          </FeatureItem>
          <FeatureItem
            title={t["about.feat.dev"]}
            description={t["about.feat.dev.desc"]}
          >
            <ArrowDownAZ slot="icon" className="w-6 h-6" />
          </FeatureItem>
          <FeatureItem
            title={t["about.feat.comp"]}
            description={t["about.feat.comp.desc"]}
          >
            <BadgeCheck slot="icon" className="w-6 h-6" />
          </FeatureItem>
        </FeaturesList>
      </div>

      <div>
        <TeamSection title={t["about.team.title"]}>
          <TeamMember image={cooperImage} />
          <TeamMember image={brandImage} />
          <TeamMember image={murphyImage} />
          <TeamMember image={tarsImage} />
        </TeamSection>
      </div>
    </Container>
  </Section>
</Layout>
